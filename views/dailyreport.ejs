<link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/dailyreport.css">

<form method='GET' action="/">
    <button class="btn" id="back-btn">
        back
    </button>
</form>

<div class="split-containers"> 
    <form method='POST' action="/insertdailyreport">
        <h3>food</h3>
        <p>(note: for each food item, separate with a comma.)</p>
        <input type="text" name="food" class="form form-food" placeholder="enter what you ate today:">
    
        <h3>chess</h3>
        <input type="text" name="chessDescription" class="form" placeholder="tell me about chess: ">
        <input type="text" name="chessWin" class="form" placeholder="wins: ">
        <input type="text" name="chessLoss" class="form" placeholder="losses: ">
    
        <h3>pushups</h3>
        <input type="text" name="pushups" class="form" placeholder="how many pushups did you do today:">
    
        <h3>exercise</h3>
        <input type="text" name="exerciseTime" class="form" placeholder="exercise time:">
        <input type="text" name="exerciseCal" class="form" placeholder="exercise calories burned:">
        <input type="text" name="exerciseMiles" class="form" placeholder="exercise miles ran:">
    
        <h3>code</h3>
        <input type="text" name="code" class="form form-code" placeholder="what did you code today:">
    
        <h3>piano</h3>
        <p>(note: for each thing practiced, separate with a comma.)</p>
        <input type="text" name="piano" class="form form-piano" placeholder="what did you practice today:">
        <br/>
        <br/>
        <button class="btn">
            submit :)
        </button>
    </form>
    
    <div class="container">
        <div class="text-container">
            <h1 class="title fade-in">
                daily report
            </h1>
            <p>
                tell me what you did today and I'll record it <br>
                (note: if you did not do something, for example, not play chess, just leave blank)
            </p>
        </div>
    </div>
    
</div>

